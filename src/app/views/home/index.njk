{% extends "layout.njk" %}

{% block content %}

<div class="container">
   <header id="home-header">
      <a href="/">
         <img src="/images/logo-home.png" alt="">
      </a>
      <a href="#">Sobre</a>
      <a href="/recipes">Receitas</a>
      <a href="/chefs">Chefs</a>
   </header>
   
   <section class="presentation-card">
      <div class="presentation-message">
         <h1>As melhores receitas</h1>
         <p>
            Aprenda a contruir os melhores pratos, com receitas
            criadas por profissionais do mundo inteiro.
         </p>
      </div>
      <img src="/images/chef.png" alt="chef figure">
   </section>
   <section class="most-accessed">
      <h2>Mais acessadas</h2>
      <div class="square"></div>
      <div class="cards">
         <ul>
            {% for recipe in recipes %}
            <li class="card">
               <a href="admin/recipes/{{recipe.id}}">
                  <img src="{{recipe.image}}" alt="{{recipe.title}}">
               </a>
               <a href="admin/recipes/{{recipe.id}}">{{recipe.title}}</a>
               <p>por: {{recipe.chef_name}}</p>
            </li>
            {% endfor %}
         </ul>
      </div>
   </section>
</div>

{% endblock %}