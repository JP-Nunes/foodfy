{% extends "layout.njk" %}

{% block content %}

{% include "parts/header.njk" %}

<div class="container recipes-list">
   <h2>Gerenciar receitas</h2>

   <ul id="recipe-list">
      {% for recipe in recipes %}
      
      <li class="recipe-card">
         <img src="{{ recipe.image }}" alt="">
         <p>por: {{ recipe.author }}</p>
         <a href="#">Visualizar</a>
      </li>
      
      {% endfor %}
   </ul>
</div>



{% endblock %}