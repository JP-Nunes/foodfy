{% extends "layout.njk" %}

{% block content %}
<div class="container show">
   <img src="{{ recipe.image }}" alt="{{ recipe.title }}">

   <div class="presentation">
      <h1>{{ recipe.title }}</h1>
      <h3>por {{ recipe.author }}</h3>
   </div>

   <div class="recipe">
   
      <div class="ingredients">
         <h3>Ingredientes: <a class="hide">Esconder</a></h3>
         <ul>
            {% for ingredient in recipe.ingredients %}
            <li>{{ ingredient }}</li>
            {% endfor %}
         </ul>
      </div>

      <div class="preparation">
         <h3>Modo de preparo: <a class="hide">Esconder</a></h3>
         <ul>
            {% for step in recipe.preparation %}
            <li>{{ step }}</li>
            {% endfor %}
         </ul>
      </div>

      <div class="information">
         <h3>Informações adicionais: <a class="hide">Esconder</a></h3>
         <p>{{ recipe.information }}</p>
      </div>
   </div>
</div>

{% endblock %}