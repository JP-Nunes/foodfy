{% extends "layout.njk" %}

{% block content %}

{% include "parts/header.njk" %}

<div class="container chef-container">
   <div class="top-content">
      <h2>Chef: {{chef.name}}</h2>
      <button class="button">Editar</button>
   </div>
   <div class="chef-presentation">
      <img src="{{chef.image}}" alt="Imagem do chef">
      <h1>Chef {{chef.name}}</h1>
      <p>{{chef.recipes_quantity}} receita</p>
   </div>
   <div class="chef-recipes">
      
      {% for recipe in chefRecipesData %}
      
      <div class="chef-recipe">
         <img src="{{recipe.image}}" alt="Imagem da receita {{recipe.name}}">
         <h4>{{recipe.title}}</h4>
         <p>por: {{chef.name}}</p>
         <a href="recipes/{{recipe.id}}">Visualizar</a>
      </div>
      
      {% endfor %}
   
   </div>
</div>

{% endblock %}